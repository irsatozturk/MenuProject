<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@* --- BURAYA EKLEYİN --- *@
@* Bildirim sistemine bir referans (x:Name gibi) veriyoruz *@
<NotificationSystem @ref="notifier" />

@code {
    // Bildirim sistemine ulaşmak için statik bir köprü kuruyoruz
    // (Bu biraz 'hacky' ama öğrenme aşaması için en kolayıdır)
    public static NotificationSystem? GlobalNotifier { get; private set; }

    private NotificationSystem? notifier;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            GlobalNotifier = notifier;
        }
    }
}