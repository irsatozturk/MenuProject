@* Dosya Yolu: /Components/DeleteConfirmationModal.razor *@

@if (isVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Hide"></button>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="Hide">İptal</button>
                    <button type="button" class="btn btn-danger" @onclick="Confirm">Evet, Sil</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string Title { get; set; } = "Silme Onayı";
    [Parameter] public string Message { get; set; } = "Bu kaydı silmek istediğinize emin misiniz?";
    [Parameter] public EventCallback OnConfirmed { get; set; }

    private bool isVisible;

    public void Show()
    {
        isVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        isVisible = false;
        StateHasChanged();
    }

    private async Task Confirm()
    {
        await OnConfirmed.InvokeAsync();
        Hide();
    }
}