@page "/menus"
@rendermode InteractiveServer

@using System.Net.Http.Json
@using MenuProject.Shared.Models
@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime

<PageTitle>Menü Yönetimi</PageTitle>
<h1>Menü Yönetimi</h1>

<div class="mb-3">
    <a href="/menus/create" class="btn btn-primary">Yeni Menü Ekle</a>
</div>

@if (menuList == null)
{
    <p><em>Menüler yükleniyor...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Menü Adı (TR)</th>
                <th>Durum</th>
                <th>Varsayılan</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menu in menuList)
            {
                <tr>
                    <td>@menu.Translations.FirstOrDefault(t => t.LanguageCode == "tr")?.Name</td>
                    <td>
                        @if (menu.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td>@(menu.IsDefault ? "Evet" : "Hayır")</td>
                    <td>
                        <button class="btn btn-sm btn-warning">Düzenle</button>
                        <button class="btn btn-sm btn-danger ms-2" @onclick="() => DeleteMenu(menu.Id)">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Menu>? menuList;

    protected override async Task OnInitializedAsync()
    {
        await LoadMenus();
    }

    private async Task LoadMenus()
    {
        var httpClient = HttpClientFactory.CreateClient("MenuAPI");
        try
        {
            menuList = await httpClient.GetFromJsonAsync<IEnumerable<Menu>>("/api/Menu?language=tr");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Yükleme Hatası: {ex.Message}");
        }
    }

    private async Task DeleteMenu(int id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Bu menüyü silmek istediğinize emin misiniz?");

        if (!confirmed)
        {
            return;
        }

        var httpClient = HttpClientFactory.CreateClient("MenuAPI");
        try
        {
            await httpClient.DeleteAsync($"/api/Menu/{id}");
            await LoadMenus();

            // İŞLEM BAŞARILI MESAJI
            await JSRuntime.InvokeVoidAsync("alert", "Menü başarıyla silindi!");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Silinemedi: {ex.Message}");
        }
    }
}