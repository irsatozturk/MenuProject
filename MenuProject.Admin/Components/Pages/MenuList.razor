@page "/menus"
@rendermode InteractiveServer

@using System.Net.Http.Json
@using MenuProject.Shared.Models
@using MenuProject.Admin.Services
@using MenuProject.Admin.Components.Layout
@using MenuProject.Admin.Components

@inject IHttpClientFactory HttpClientFactory
@inject IJSRuntime JSRuntime
@inject ClientTranslationService Translate
@* YENİ: Servisi Enjekte Ediyoruz *@
@inject NotifierService Notifier

<PageTitle>@Translate.Get("menu_create_title")</PageTitle>

<h1>@Translate.Get("menu_create_title").Replace("Yeni ", "") Yönetimi</h1>

<div class="mb-3">
    <a href="/menus/create" class="btn btn-primary">@Translate.Get("menu_create_title")</a>
</div>

@if (menuList == null)
{
    <p><em>@Translate.Get("loading")</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Translate.Get("menu_name_label")</th>
                <th>@Translate.Get("is_active")</th>
                <th>@Translate.Get("is_default")</th>
                <th>@Translate.Get("operations")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menu in menuList)
            {
                <tr>
                    <td>@menu.Translations.FirstOrDefault(t => t.LanguageCode == "tr")?.Name</td>
                    <td>
                        @if (menu.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td>@(menu.IsDefault ? "Evet" : "Hayır")</td>
                    <td>
                        <a href="/menus/edit/@menu.Id" class="btn btn-sm btn-warning">@Translate.Get("edit_btn")</a>
                        <button class="btn btn-sm btn-danger ms-2" @onclick="() => RequestDelete(menu.Id)">
                            @Translate.Get("delete_btn")
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<DeleteConfirmationModal @ref="deleteConfirmationModal"
                         Title="@Translate.Get("delete_confirm_title")"
                         Message="@Translate.Get("confirm_delete")"
                         OnConfirmed="HandleDeleteConfirmed" />

@code {
    private IEnumerable<Menu>? menuList;
    private DeleteConfirmationModal deleteConfirmationModal = default!;
    private int _menuIdToDelete;

    protected override async Task OnInitializedAsync()
    {
        await Translate.LoadTranslationsAsync("tr");
        await LoadMenus();
    }

    private async Task LoadMenus()
    {
        var httpClient = HttpClientFactory.CreateClient("MenuAPI");
        try
        {
            menuList = await httpClient.GetFromJsonAsync<IEnumerable<Menu>>("/api/Menu?language=tr");
        }
        catch (Exception ex)
        {
            // MainLayout yerine Notifier kullanıyoruz
            Notifier.Show($"Hata: {ex.Message}", true);
        }
    }

    private void RequestDelete(int id)
    {
        _menuIdToDelete = id;
        deleteConfirmationModal.Show();
    }

    private async Task HandleDeleteConfirmed()
    {
        var httpClient = HttpClientFactory.CreateClient("MenuAPI");
        try
        {
            var response = await httpClient.DeleteAsync($"/api/Menu/{_menuIdToDelete}");

            if (response.IsSuccessStatusCode)
            {
                await LoadMenus();
                // YENİ KULLANIM:
                Notifier.Show(Translate.Get("delete_success"), false);
            }
            else
            {
                Notifier.Show(Translate.Get("delete_error"), true);
            }
        }
        catch (Exception ex)
        {
            Notifier.Show(ex.Message, true);
        }
    }
}